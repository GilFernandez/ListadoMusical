@model ListadoMusical.Models.ViewModels.UsuarioViewModel
@{
    ViewBag.Title = "Agregar Usuario";
}

<h2>Agregar</h2>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("Agregar","Usuario",FormMethod.Post, new { role="form", @class=""}))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationMessage("error", new { @class="text-danger"})

                @Html.LabelFor(d=>d.nombreUsuario)
                @Html.TextBoxFor(d=> d.nombreUsuario, new { @class = "form-control"})

                <div style="text-align:right">
                    <input type="submit" class="btn btn-success" value="Guardar" />
                </div>
                
            }

    </div>
</div>