@model List<ListadoMusical.Models.TableViewModels.UsuarioTableViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>
<div class="row">
    <div class="col-md-12">
        <br />  
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Usuario/Agregar")'" value="Agrega un usuario" />
        <br />  
    </div>
</div>
<br />  
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Usuario</th>
            </tr>

            @foreach (var oElemento in Model )
            {
                <tr>
                    <td>@oElemento.Id </td>
                    <td>@oElemento.NombreUsuario </td>
                </tr>
            }
        </table>
    </div>
</div>